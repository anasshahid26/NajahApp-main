<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#aff6fc"
    tools:context="com.example.muhammadanas.najahapp.SubjectActivity">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#bababa">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/logo"
                android:layout_gravity="top|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="High School Subject"
                android:id="@+id/level"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:visibility="visible"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true">

            <Button android:id="@+id/mathematics" style="?android:textAppearanceSmall"
                android:layout_width="300dp" android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:background="#D50F42"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Mathematics"
                android:layout_gravity="center_horizontal" />
            <Button android:id="@+id/science" style="?android:textAppearanceSmall"
                android:layout_width="300dp" android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:background="#D50F42"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="Science"
                android:layout_gravity="center_horizontal" />
            <Button android:id="@+id/english" style="?android:textAppearanceSmall"
                android:layout_width="300dp" android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:background="#D50F42"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="English Or Language Arts"
                android:layout_gravity="center_horizontal" />
                    <Button android:id="@+id/sst" style="?android:textAppearanceSmall"
                        android:layout_width="300dp" android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:background="#D50F42"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:text="Social Studies"
                        android:layout_gravity="center_horizontal" />
                    <Button android:id="@+id/programming" style="?android:textAppearanceSmall"
                        android:layout_width="300dp" android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:background="#D50F42"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:text="Programmer"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>



    </FrameLayout>







</RelativeLayout>
